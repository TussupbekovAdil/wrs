{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}
{% block head_title %}
    <h2>Dashboard</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    <div class="row  p-4  bg-light  rounded">
        <div class="col-sm  d-flex  flex-wrap  user">
            <div class="flex-shrink-0  mr-4">
                <img class="rounded  user-avatar" src="https://placehold.it/120x150" alt="User avatar" width="120" height="150">
            </div>

            <div class="d-flex  flex-column">
                <span class="mb-2  h5  font-weight-bold  user__name">{{ app.user.email }}</span>
                <span class="mb-2  h6">{{ app.user.roles|join(', ')}}</span>
                <a href="mailto:{{ app.user.email }}">{{ app.user.email }}</a>
            </div>
        </div>

        <div class="col-sm  rating">
            <div>
                <p class="h6">Сколько оценок поставил: <span class="font-weight-bold">N</span></p>
                <p class="h6  mb-4">Сколько оценок получил: &nbsp;<span class="font-weight-bold">N</span></p>
            </div>

            <div class="list-group  list-group-horizontal">
                <a class="list-group-item  list-group-item-action  d-flex  align-items-center  justify-content-center  w-25  p-0  py-2 " href="#">
                    <img src="img/icon-github.svg" alt="github icon" width="24" height="24">
                </a>
                <a class="list-group-item  list-group-item-action  d-flex  align-items-center  justify-content-center  w-25  p-0  py-2 " href="#">
                    <img src="img/icon-gitlab.svg" alt="gitlab icon" width="24" height="24">
                </a>
                <a class="list-group-item  list-group-item-action  d-flex  align-items-center  justify-content-center  w-25  p-0  py-2 " href="#">
                    <img src="img/icon-telegram.svg" alt="telegram icon" width="24" height="24">
                </a>
                <a class="list-group-item  list-group-item-action  d-flex  align-items-center  justify-content-center  w-25  p-0  py-2 " href="#">
                    <img src="img/icon-skype.svg" alt="skype icon" width="24"  height="24">
                </a>
            </div>
        </div>
    </div>
 
    <div class="w-100  my-4  mx-3  separator"></div>
 



    <div class="row">
        <div class="col col-sm-12">
            <div class="list-group">
                {% if is_granted(constant('App\\Enum\\PermissionEnum::CAN_SEE_MANAGE_TASK'), app.user) %}
                    <a href="{{ path('app_dashboard_task') }}" class="list-group-item list-group-item-action">Tasks</a>
                {% endif %}
                {% if is_granted(constant('App\\Enum\\PermissionEnum::CAN_SEE_MANAGE_TEAM'), app.user) %}
                    <a href="{{ path('app_dashboard_team') }}" class="list-group-item list-group-item-action">Teams</a>
                {% endif %}
                {% if is_granted(constant('App\\Enum\\PermissionEnum::CAN_SEE_MANAGE_PROJECT'), app.user) %}
                    <a href="{{ path('app_dashboard_project') }}" class="list-group-item list-group-item-action">Projects</a>
                {% endif %}
            </div>
        </div>
    </div>
    
    <br>
    
    <div class="row">
        <div class="col col-sm-12">
            {% for item in tasks %}
            
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.name }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Executor: {{ item.executor.email }}</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Team: {{ item.team.name }}</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Project: {{ item.project.name }}</h6>
                        <p class="card-text">{{ item.description }}</p>
                        
                        {% if (is_granted_mark(app.user)) %}
                            <a href="{{ path('app_dashboard_check_list', {"id" : item.id}) }}" class="btn btn-primary {{ (is_granted(constant('App\\Enum\\PermissionEnum::CAN_BE_TEAMLEAD'), app.user) and app.user.id == item.executor.id) ? 'disabled' : '' }}">Mark</a>
                        {% endif %}
                    </div>
                </div>
                
                <br>
            {% endfor %}
        </div>
    </div>

{% endblock %}
