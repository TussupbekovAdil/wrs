{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}
{% block head_title %}
    <h2>Dashboard</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col col-sm-12">
            <div class="list-group">
                {% if is_granted(constant('App\\Enum\\PermissionEnum::CAN_SEE_MANAGE_TASK'), app.user) %}
                    <a href="{{ path('app_dashboard_task') }}" class="list-group-item list-group-item-action">Tasks</a>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}