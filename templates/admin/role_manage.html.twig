{% extends 'base.html.twig' %}

{% block title %}Admin Panel | Manage Role{% endblock %}
{% block head_title %}
    <h2>{{ role.name }}</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin Panel</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_security') }}">Security</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_security_role') }}">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ role.name }}</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">
            <a href="{{ path('app_admin_security_role_manage_attach_permission', {'id': role.id}) }}" class="btn btn-primary">Attach permission</a>
        </div>
    </div>
    
    <br>
    
    <table class="table table-bordered">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Tools</th>
            </tr>
        </thead>
        <tbody>
            {% for item in role.permissions %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_security_role_manage_detach_permission', {'role_id': role.id, 'permission_id': item.id}) }}">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}