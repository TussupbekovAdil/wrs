{% extends 'base.html.twig' %}

{% block title %}Admin Panel | Job Positions{% endblock %}
{% block head_title %}
    <h2>Job Positions</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin Panel</a></li>
        <li class="breadcrumb-item active" aria-current="page">Job Positions</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    {% include 'parts/flash_message.html.twig' %}

    <div class="card">
        <div class="card-body">
            <a href="{{ path('app_admin_job_position_create') }}" class="btn btn-primary">Create job position</a>
        </div>
    </div>
    
    <br>
    
    <table class="table table-bordered">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Active</th>
              <th scope="col">Tools</th>
            </tr>
        </thead>
        <tbody>
            {% for item in jobPositions %}
                {% if item.deleted == false %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td><i class="fas fa-check"></i></td>
                    <td>
                        <a href="{{ path('app_admin_job_position_manage', {'id': item.id}) }}">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="{{ path('app_admin_job_position_delete', {'id': item.id}) }}">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>

{% endblock %}