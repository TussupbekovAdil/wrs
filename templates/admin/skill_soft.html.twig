{% extends 'base.html.twig' %}

{% block title %}Admin Panel | Soft Skills{% endblock %}
{% block head_title %}
    <h2>Soft Skills</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin Panel</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_skill') }}">Skills</a></li>
        <li class="breadcrumb-item active" aria-current="page">Soft Skills</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">
            <a href="{{ path('app_admin_skill_soft_create') }}" class="btn btn-primary">Create skill</a>
        </div>
    </div>
    
    <br>
    
    <table class="table table-bordered">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Role</th>
              <th scope="col">Tools</th>
            </tr>
        </thead>
        <tbody>
            {% for item in skills %}
                <tr>
                    <td>{{ item.content }}</td>
                    <td>{{ item.role.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_skill_soft_delete', {'id': item.id}) }}">
                            <i class="far fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}