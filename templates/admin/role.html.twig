{% extends 'base.html.twig' %}

{% block title %}Admin Panel | Roles{% endblock %}
{% block head_title %}
    <h2>Roles</h2>
{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('index') }}">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin') }}">Admin Panel</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_admin_security') }}">Security</a></li>
        <li class="breadcrumb-item active" aria-current="page">Roles</li>
      </ol>
    </nav>
{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-body">
            <a href="{{ path('app_admin_security_role_create') }}" class="btn btn-primary">Create role</a>
        </div>
    </div>
    
    <br>
    
    <table class="table table-bordered">
        <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Tools</th>
            </tr>
        </thead>
        <tbody>
            {% for item in roles %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>
                        <a href="{{ path('app_admin_security_role_update', {'id': item.id}) }}">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="{{ path('app_admin_security_role_manage', {'id': item.id}) }}">
                            <i class="fas fa-tools"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}